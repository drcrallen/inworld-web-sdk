{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "rootDirs": [
      "src"
    ],
    "declaration": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "target": "es2022",
    "types": [
      "jest",
      "node"
    ],
    "allowJs": true,
    "sourceMap": true,
  },
  "include": [
    "src/**/*",
    "proto/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "tsc-alias": {
    "verbose": true,
    "resolveFullPaths": true,
    "replacers": {
      "jsonReplacer": {
        "enabled": true,
        "file": "./replacers/json.cjs"
      }
    },
    "fileExtensions": {
      "inputGlob": "{js,jsx,mjs,ts,tsx}",
      "outputCheck": [
        "json"
      ]
    }
  }
}